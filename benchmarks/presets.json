{
  "pi": {
    "description": "Monte Carlo Pi estimation.",
    "totalUnits": 40000000,
    "unitsPerShard": 400000,
    "timeoutMs": 240000,
    "args": {
      "benchmark": "pi",
      "seed": 1337
    },
    "reducer": {
      "type": "sum",
      "fields": ["hits", "samples", "ops"]
    }
  },
